<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="no.tobask.sb4e.library.providers" name="External Item Providers" schema="schema/externalItemProviders.exsd"/>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="no.tobask.sb4e.editors.FXMLEditor"
            contributorClass="no.tobask.sb4e.editors.FXMLEditorContributor"
            default="false"
            extensions="fxml"
            icon="icons/SceneBuilderLogo@2x.png"
            id="sb4e.editors.FXMLEditor"
            name="Scene Builder FXML Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="sb4e.scenebuilder"
            class="no.tobask.sb4e.views.InspectorViewWrapper"
            id="sb4e.views.InspectorView"
            name="Inspector View"
            restorable="true">
      </view>
      <category
            id="sb4e.scenebuilder"
            name="Scene Builder">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
         <menuContribution
         	   allPopups="false"
               locationURI="popup:org.eclipse.ui.popup.any?after=group.open">
               <command
                     commandId="no.tobask.sb4e.includefxml"
                     label="Include in opened document"
                     style="push">
                     <visibleWhen>
                           <and>
                           		<with
                                 variable="activeMenuSelection">
                                 <iterate
                                 	ifEmpty="false"
                                 	operator="and">
                                 	<adapt
                                        type="org.eclipse.core.resources.IFile">
                                        <test
                                              property="org.eclipse.core.resources.name"
                                              value="*.fxml">
                                        </test>
                                 	</adapt>
                                 </iterate>
                                 <count
                                       value="1">
                                 </count>
                           		</with>
                           		<with
                                   variable="activeEditorId">
                                   <equals
                                         value="sb4e.editors.FXMLEditor">
                                   </equals>
                           		</with>
                           </and>
                     </visibleWhen>
               </command>
         </menuContribution>
         <menuContribution
               locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
            <command
                  commandId="no.tobask.sb4e.addRemoveFxNature"
                  label="Disable Fx project builder"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="no.tobask.sb4e.fxNature">
                           </test>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="no.tobask.sb4e.addRemoveFxNature"
                  label="Enable Fx project builder"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                           <not>
                              <test
                                    property="org.eclipse.core.resources.projectNature"
                                    value="no.tobask.sb4e.fxNature">
                              </test>
                           </not>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
         <command
               id="no.tobask.sb4e.includefxml"
               name="Include fxml">
         </command>
         <category
               id="no.tobask.sb4e.fxNature.category"
               name="Fx Project Nature commands">
         </category>
         <command
               categoryId="no.tobask.sb4e.fxNature.category"
               defaultHandler="no.tobask.sb4e.builder.AddRemoveFxNatureHandler"
               id="no.tobask.sb4e.addRemoveFxNature"
               name="Add/RemoveFx Project Nature">
         </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="no.tobask.sb4e.includefxml"
            class="no.tobask.sb4e.handlers.IncludeFxmlHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.jdt.core.compilationParticipant">
      <compilationParticipant
            class="no.tobask.sb4e.coherence.FxControllerValidator"
            id="FxControllerValidator"
            createsProblems="true">
            <managedMarker
                  markerType="no.tobask.sb4e.fxcontrollerproblemmarker">
            </managedMarker>
      </compilationParticipant>
   </extension>
   <extension
         id="no.tobask.sb4e.fxcontrollerproblemmarker"
         name="Bobob"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.jdt.core.problem">
      </super>
   </extension>
   <extension
         point="org.eclipse.jdt.ui.quickFixProcessors">
      <quickFixProcessor
            class="no.tobask.sb4e.coherence.MissingFxIdsFixer"
            id="no.tobask.sb4e.quickFixProcessor"
            name="Fixx">
         <handledMarkerTypes>
            <markerType
                  id="no.tobask.sb4e.fxcontrollerproblemmarker">
            </markerType>
         </handledMarkerTypes>
      </quickFixProcessor>
   </extension>
   <extension
         id="fxProjectBuilder"
         name="Fx Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="no.tobask.sb4e.builder.FxProjectBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="fxNature"
         name="Fx Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="no.tobask.sb4e.builder.FxNature">
         </run>
      </runtime>
      <builder
            id="no.tobask.sb4e.fxProjectBuilder">
      </builder>
   </extension>
   <extension
         id="fxProblem"
         name="JavaFX Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="no.tobask.sb4e.builder.Resolver"
            markerType="no.tobask.sb4e.fxProblem">
      </markerResolutionGenerator>
   </extension>
   
   <extension
         point="org.eclipse.ltk.core.refactoring.renameParticipants">
      <renameParticipant
            class="no.tobask.sb4e.RenameEventHandlerParticipant"
            id="no.tobask.sb4e.renameParticipant1"
            name="name">
         <enablement>
            <with
                  variable="element">
                  <instanceof
                        value="org.eclipse.jdt.core.IMethod">
                  </instanceof>
            </with>
         </enablement>
      </renameParticipant>
   </extension>
 
</plugin>
